<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".artesania.OliXiraldez">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/oliXiraldez"
                    android:textColor="#415419"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/lineaVerde1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                app:srcCompat="@mipmap/lineaverde" />

            <LinearLayout
                android:id="@+id/layoutNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="90dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/lineaVerde1"
                app:layout_constraintTop_toBottomOf="@id/lineaVerde1">

                        <ImageView
                            android:id="@+id/iconoPersona"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/persoa" />

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/oliXiraldezArtesan"
                            android:textColor="#51661c"
                            android:textSize="14sp" />
                    </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/layoutNome"
                    app:layout_constraintTop_toBottomOf="@id/layoutNome">

                    <ImageButton
                        android:id="@+id/maps"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/animamaps"
                        android:contentDescription="@string/appbar_scrolling_view_behavior"
                        android:minWidth="48dp"
                        app:srcCompat="@drawable/mapsnegro"
                        app:tint="#00989898"
                        tools:ignore="TouchTargetSizeCheck" />


                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/oliXiraldezDireccion"
                        android:textColor="#51661c"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTelf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="200dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/layoutMaps"
                    app:layout_constraintTop_toBottomOf="@id/layoutMaps">


                    <ImageButton
                        android:id="@+id/botonTelefono"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/animatelefono"
                        android:contentDescription="@string/appbar_scrolling_view_behavior"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/telefono"
                        app:tint="#00FFFFFF"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/oliXiraldezTelefono"
                        android:textColor="#51661c"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="260dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/layoutTelf"
                    app:layout_constraintTop_toBottomOf="@id/layoutTelf">

                    <ImageButton
                        android:id="@+id/botonCorreo"
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/animacorreo"
                        android:contentDescription="@string/appbar_scrolling_view_behavior"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/gmail"
                        app:tint="#00FFFFFF"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/oliXiraldezCorreo"
                        android:textColor="#51661c"
                        android:textSize="14sp" />
                </LinearLayout>


            <ImageButton
                android:id="@+id/fbBoton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/facebookanima"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="@id/layoutMail"
                app:layout_constraintTop_toBottomOf="@id/layoutMail"
                app:srcCompat="@mipmap/facebook"
                app:tint="#00FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/imgVector"
                    android:layout_width="180dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="225dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="@id/fbBoton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@mipmap/vectortaller"
                    app:tint="#1F000000" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="320dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginEnd="25dp"
                    app:srcCompat="@mipmap/olixiraldez" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="280dp"
                    android:text="@string/oliXiraldezDescricion"
                    android:textColor="#51661c"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/lineaVerde2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv2"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@mipmap/lineaverde" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/facebook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/facebookanima"
                    android:contentDescription="facebook"
                    app:srcCompat="@drawable/facebook_3_"
                    app:tint="#0F000000"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/twitter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/facebook"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/animatwitter"
                    android:contentDescription="twitter"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/twitter_4_"
                    app:tint="#00B8AEAE"
                    tools:ignore="TouchTargetSizeCheck" />


                <ImageButton
                    android:id="@+id/instagram"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/twitter"
                    android:background="@drawable/animainstagram"
                    android:contentDescription="@string/appbar_scrolling_view_behavior"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/instagram_3_"
                    app:tint="#0F000000"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/info"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="información"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/informacion"
                    app:tint="#7F000000" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
    <ImageButton
        android:id="@+id/logoTeo"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/concelloteo" />

    <ImageButton
        android:id="@+id/hamburguesa"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="menu hamburguesa"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:theme="@android:style/ThemeOverlay.Material.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hamburguesa"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>