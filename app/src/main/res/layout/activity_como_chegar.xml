<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComoChegar">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/logoTeo"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/logoconcello"
            android:scaleType="fitXY"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            app:srcCompat="@drawable/logo" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="205dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="menu hamburguesa"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            app:srcCompat="@drawable/hamburguesa"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/aloxamentos"
            android:layout_width="280dp"
            android:layout_height="97dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="@string/comoChegar"
            android:textColor="#7F4B5A2B"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-20dp"
            android:foregroundTint="#2DFFFFFF"
            app:srcCompat="@mipmap/lineaverder" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recursoCoche"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:contentDescription="Coche"
            android:src="@mipmap/recursocoche"
            app:tint="#E7F4E7" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recursoLocalizacion"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top"
                android:contentDescription="Coche"
                android:src="@drawable/ic_baseline_location_on_24"
                app:tint="#E7F4E7" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="#7F000000"
                android:layout_marginStart="20dp"
                android:text="@string/direccionAyuntamieto"
                android:textSize="16dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/telefonoConcello"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:tint="#7F000000"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:text="@string/telefonoConcello"
            android:gravity="center"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/correoTurismo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:tint="#7F000000"
            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
            android:text="@string/correoTurismo"
            android:gravity="center"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/mapaConcello"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="Coche"
            android:layout_marginTop="15dp"
            android:layout_marginStart="8dp"
            android:src="@mipmap/mapaconcello" />

        <ImageView
            android:id="@+id/lineaVerde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:foregroundTint="#2DFFFFFF"
            app:srcCompat="@mipmap/lineaverder" />

        <RelativeLayout
        android:id="@+id/layoutRedes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00B8AEAE"
            android:contentDescription="facebook"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            app:srcCompat="@drawable/facebook"
            app:tint="#7F000000" />

        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-25dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/facebook"
            android:backgroundTint="#00B8AEAE"
            android:contentDescription="twitter"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            app:srcCompat="@drawable/twitter"
            app:tint="#7F000000" />

            <ImageButton
                android:id="@+id/instagram"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-25dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/twitter"
                android:backgroundTint="#00B8AEAE"
                android:contentDescription="instagram"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:theme="@android:style/ThemeOverlay.Material.Dark"
                app:srcCompat="@drawable/instagram"
                app:tint="#7F000000" />

        <ImageButton
            android:id="@+id/info"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#00B8AEAE"
            android:contentDescription="informaciÃ³n"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            app:srcCompat="@drawable/info"
            app:tint="#7F000000" />


    </RelativeLayout>
    </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>