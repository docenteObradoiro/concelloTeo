<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF"
    android:foregroundTint="#FFFFFF"
    tools:context=".artesania.AlalaCouture">
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="20dp"
                android:text="@string/alala"
                android:textColor="#415419"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/lineaVerde1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@mipmap/lineaverde" />

            <LinearLayout
                android:id="@+id/layoutHorizontalPpal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-30dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="44dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iconoPersona"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/persoa" />

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/alalaArtesan"
                            android:textColor="#51661c"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="44dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iconoOrdenador"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ordenador" />

                        <TextView
                            android:id="@+id/tv8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/paxinaWeb"
                            android:textColor="#51661c"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMaps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="44dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/maps"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/animamaps"
                            android:contentDescription="@string/appbar_scrolling_view_behavior"
                            android:minWidth="48dp"
                            app:srcCompat="@drawable/mapsnegro"
                            app:tint="#00989898"
                            tools:ignore="TouchTargetSizeCheck" />


                        <TextView
                            android:id="@+id/tv9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="25dp"
                            android:text="@string/alalaDireccion"
                            android:textColor="#51661c"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutTelf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="44dp"

                        android:orientation="horizontal">


                        <ImageButton
                            android:id="@+id/botonTelefono"
                            android:layout_width="40dp"
                            android:layout_height="40dp"

                            android:layout_marginTop="20dp"
                            android:background="@drawable/animatelefono"
                            android:contentDescription="@string/appbar_scrolling_view_behavior"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/telefono"
                            app:tint="#00FFFFFF"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/tv6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="25dp"
                            android:text="@string/alalaTelefono"
                            android:textColor="#51661c"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="44dp"
                        android:orientation="horizontal">


                        <ImageButton
                            android:id="@+id/botonCorreo"
                            android:layout_width="45dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/animacorreo"
                            android:contentDescription="@string/appbar_scrolling_view_behavior"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/gmail"
                            app:tint="#00FFFFFF"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/tv7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="25dp"
                            android:text="@string/alalaCorreo"
                            android:textColor="#51661c"
                            android:textSize="14sp" />
                    </LinearLayout>




                </LinearLayout>


                <ImageView
                    android:id="@+id/imgVector"
                    android:layout_width="200dp"
                    android:layout_height="332dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/vectorcostura"
                    app:tint="#1F000000" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@mipmap/alala" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/imageView3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="200dp"
                    android:text="@string/desenhoModa"
                    android:textColor="#51661c"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/lineaVerde2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@id/tv2"
                    app:srcCompat="@mipmap/lineaverde" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/facebook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/facebookanima"
                    android:contentDescription="facebook"
                    app:srcCompat="@drawable/facebook_3_"
                    app:tint="#0F000000"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/twitter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/facebook"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/animatwitter"
                    android:contentDescription="twitter"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/twitter_4_"
                    app:tint="#00B8AEAE"
                    tools:ignore="TouchTargetSizeCheck" />


                <ImageButton
                    android:id="@+id/instagram"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/twitter"
                    android:background="@drawable/animainstagram"
                    android:contentDescription="@string/appbar_scrolling_view_behavior"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/instagram_3_"
                    app:tint="#0F000000"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/info"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="informaciÃ³n"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/informacion"
                    app:tint="#7F000000" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
    <ImageButton
        android:id="@+id/logoTeo"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/concelloteo" />
</androidx.constraintlayout.widget.ConstraintLayout>