<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.sanmartino">

  <ImageButton
      android:id="@+id/botonTeo8"
      android:layout_width="100dp"
      android:layout_height="60dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:background="#00FFFFFF"
      android:contentDescription="botonTeo"
      android:scaleType="fitXY"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/logo8" />

  <ImageButton
      android:id="@+id/hamburguesa8"
      android:layout_width="48dp"
      android:layout_height="55dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:background="#00FFFFFF"
      android:contentDescription="hamburguesa"
      android:scaleType="fitXY"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/hamburguesa" />

  <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="100dp"
      android:layout_marginEnd="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0">



  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <TextView
          android:id="@+id/texto"
          android:layout_width="323dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:paddingTop="15dp"
          android:text="@string/tituloSanMartiño"
          android:textColor="#415419"
          android:textSize="24sp" />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="70dp"
          android:foregroundTint="#2DFFFFFF"
          android:translationY="-50dp"
          app:srcCompat="@mipmap/lineaverder" />

      <ImageView
          android:layout_width="369dp"
          android:layout_height="282dp"
          android:layout_marginLeft="3dp"
          android:translationY="-25dp"
          app:srcCompat="@mipmap/cabalo" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:layout_marginBottom="40dp"
          android:backgroundTint="#FFFEFE"
          android:paddingLeft="30dp"
          android:paddingTop="15dp"
          android:paddingRight="30dp"
          android:text="@string/infoSanMartiño"
          android:textColor="#000000" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:text="@string/tituloTextoSanMartiño2" />

      <ImageView
          android:layout_width="260dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="10dp"
          android:foregroundTint="#2DFFFFFF"
          app:srcCompat="@mipmap/lineaverder" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="40dp"
          android:backgroundTint="#FFFEFE"

          android:paddingLeft="30dp"
          android:paddingTop="15dp"
          android:paddingRight="30dp"
          android:text="@string/infoSanMartiño2"
          android:textColor="#000000"
          android:layout_gravity="center"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:text="@string/tituloTextoSanMartiño3" />

      <ImageView
          android:layout_width="240dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="10dp"
          android:foregroundTint="#2DFFFFFF"
          app:srcCompat="@mipmap/lineaverder" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="20dp"
          android:backgroundTint="#FFFEFE"
          android:paddingLeft="30dp"
          android:paddingTop="15dp"
          android:paddingRight="30dp"
          android:text="@string/infoSanMartiño3"
          android:textColor="#000000"
          android:layout_gravity="center"/>

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="362dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="0dp"
          android:foregroundTint="#2DFFFFFF"
          app:srcCompat="@mipmap/lineaverder" />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal">


        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00B8AEAE"
            android:contentDescription="facebook"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            app:srcCompat="@drawable/facebook"
            app:tint="#7F000000" />

        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-25dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/facebook"
            android:backgroundTint="#00B8AEAE"
            android:contentDescription="twitter"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            app:srcCompat="@drawable/twitter"
            app:tint="#7F000000" />

        <ImageButton
            android:id="@+id/instagram"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-25dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/twitter"
            android:backgroundTint="#00B8AEAE"
            android:contentDescription="instagram"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            app:srcCompat="@drawable/instagram"
            app:tint="#7F000000" />

        <ImageButton
            android:id="@+id/info"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#00B8AEAE"
            android:contentDescription="información"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            app:srcCompat="@drawable/info"
            app:tint="#7F000000" />


      </RelativeLayout>
    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>