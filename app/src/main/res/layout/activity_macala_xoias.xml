<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBF9"
    tools:context=".artesania.MacalaXoias">

    <ImageButton
        android:id="@+id/logoTeo"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/logoConcello"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/concelloteo" />

    <ImageButton
        android:id="@+id/hamburguesa"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/menu_hamburguesa"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:theme="@android:style/ThemeOverlay.Material.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hamburguesa"
        tools:ignore="TouchTargetSizeCheck" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/macala"
                    android:textColor="#415419"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="26dp"
                    android:paddingEnd="40dp"
                    android:text="@string/macalaXoiasDescricion"
                    android:textColor="#51661c"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv1"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/lineaVerde1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv1"
                    app:srcCompat="@mipmap/lineaverde" />

                <LinearLayout
                    android:id="@+id/layoutNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="90dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/lineaVerde1"
                    app:layout_constraintTop_toBottomOf="@id/lineaVerde1">

                    <ImageView
                        android:id="@+id/iconoPersona"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/persoa" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/macalaXoiasArtesan"
                        android:textColor="#51661c"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTelf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="140dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/layoutNome"
                    app:layout_constraintTop_toBottomOf="@id/layoutNome">


                    <ImageButton
                        android:id="@+id/botonTelefono"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/animatelefono"
                        android:contentDescription="@string/appbar_scrolling_view_behavior"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/telefono"
                        app:tint="#00FFFFFF"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/macalaXoiasTelefono"
                        android:textColor="#51661c"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="210dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/layoutMaps"
                    app:layout_constraintTop_toBottomOf="@id/layoutMaps">

                    <ImageButton
                        android:id="@+id/maps"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/animamaps"
                        android:contentDescription="@string/appbar_scrolling_view_behavior"
                        android:minWidth="48dp"
                        app:srcCompat="@drawable/mapsnegro"
                        app:tint="#00989898"
                        tools:ignore="TouchTargetSizeCheck" />


                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/macalaXoiasDireccion"
                        android:textColor="#51661c"
                        android:textSize="14sp" />

                </LinearLayout>



                <RelativeLayout
                    android:id="@+id/layoutRedes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutMaps"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/layoutMaps">

                    <ImageButton
                        android:id="@+id/iconoWeb"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/animaweb"
                        android:contentDescription="@string/paxinaWeb"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/globo"
                        app:tint="#00FFFFFF"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ImageButton
                        android:id="@+id/botonCorreo"
                        android:layout_width="55dp"
                        android:layout_height="34dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_toStartOf="@+id/igBoton"
                        android:layout_toEndOf="@+id/iconoWeb"
                        android:background="@drawable/animacorreo"
                        android:contentDescription="@string/appbar_scrolling_view_behavior"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@id/iconoWeb"
                        app:srcCompat="@mipmap/gmail"
                        app:tint="#00FFFFFF"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ImageButton
                        android:id="@+id/igBoton"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/animainstagram"
                        android:contentDescription="@string/appbar_scrolling_view_behavior"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@id/botonCorreo"
                        app:srcCompat="@mipmap/instagram"
                        app:tint="#00FFFFFF"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ImageButton
                        android:id="@+id/fbBoton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="28dp"
                        android:layout_toEndOf="@+id/igBoton"
                        android:background="@drawable/facebookanima"
                        android:contentDescription="@string/appbar_scrolling_view_behavior"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@id/igBoton"
                        app:srcCompat="@mipmap/facebook"
                        app:tint="#00FFFFFF"
                        tools:ignore="TouchTargetSizeCheck" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgVector"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/lineaVerde1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="false"
                    android:layout_marginStart="230dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/trisquel"
                    app:tint="#1F000000" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="320dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="35dp"
                    app:srcCompat="@mipmap/macalaxoias" />


                <ImageView
                    android:id="@+id/lineaVerde2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/imageView3"
                    android:layout_marginTop="340dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@mipmap/lineaverde" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/facebook"
                    android:layout_width="53dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="facebook"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:srcCompat="@drawable/facebook"
                    app:tint="#7F000000" />

                <ImageButton
                    android:id="@+id/twitter"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/facebook"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="twitter"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:srcCompat="@drawable/twitter"
                    app:tint="#7F000000" />

                <ImageButton
                    android:id="@+id/instagram"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="-25dp"
                    android:layout_toEndOf="@+id/twitter"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="instagram"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:srcCompat="@drawable/instagram"
                    app:tint="#7F000000" />

                <ImageButton
                    android:id="@+id/info"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="información"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:srcCompat="@drawable/info"
                    app:tint="#7F000000" />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>